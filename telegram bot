import telebot
import random


API_TOKEN = 'токен'

bot = telebot.TeleBot(API_TOKEN)

advice_list = [
    "Сортируйте мусор: бумагу, пластик и стекло можно переработать.",
    "Используйте многоразовые сумки вместо пластиковых пакетов.",
    "Экономьте воду, выключая кран, когда чистите зубы или моете посуду.",
    "Отдавайте предпочтение местным продуктам – это снижает углеродный след.",
    "Используйте общественный транспорт или велосипед вместо личного автомобиля.",
    "Выключайте электроприборы из розетки, когда они не используются.",
    "Снижайте потребление мяса – это помогает сократить выбросы парниковых газов.",
    "Сажайте деревья и ухаживайте за зелеными насаждениями в вашем районе.",
    "Используйте многоразовые бутылки для воды, чтобы уменьшить количество одноразового пластика.",
    "Поддерживайте компании, которые внедряют экологически чистые технологии."
]

@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(message, "Привет! Я бот, который помогает заботиться об экологии. Напиши /advice, чтобы получить экологический совет.")

@bot.message_handler(commands=['advice'])
def send_advice(message):
    advice = random.choice(advice_list)
    bot.reply_to(message, advice)

@bot.message_handler(func=lambda message: True)
def echo_all(message):
    bot.reply_to(message, "Напиши /advice, чтобы получить экологический совет!")

bot.polling()
