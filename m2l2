from flask import Flask
import random

app = Flask(__name__)

facts_list = [
        'Проведение слишком большого количества часов за компьютером или без осознания этого.',
        'Пребывание за компьютером до поздней ночи.',
        'Ощущение пустоты вдали от компьютера, телефона.',
        'Нарушение режима питания, отдыха и общения с друзьями ради доступа в Интернет.',
        'Невозможность регулировать время использования техники.',
        'Испытывать депрессию, стресс и напряжение из-за использования технологий.',
        'Наслаждаться только цифровыми устройствами.',
        'Ложь семье и друзьям о продолжительности использования.'
]


@app.route("/")
def hello_world():
    return f'<h1>Hello, World!</h1> <a href="/facts/">рандомный факт</a> <a href="/facts/">орёл или решка</a>'

@app.route("/facts/")
def get_fact():
    return f'<p>{random.choice(facts_list)}</p>'

@app.route("/coin/")
def coin_flip():
    result = random.choice(['Орёл', 'Решка'])
    return f'<h2>Результат броска монетки:</h2><p>{result}</p>'




app.run(debug=True)
